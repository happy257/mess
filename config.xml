<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sample.mess" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>App2</name>
    <description>A sample PhoneGap app to test push messages.</description>
    <author email="absachdeva@gmail.com">Abhinav Sachdeva</author>
    <content src="index.html" />
    <access origin="*" />
	<allow-intent href="*" />
	<allow-navigation href="*" />

	<preference name="orientation" value="portrait" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="android-installLocation" value="auto" />  <!-- android:install location. 'auto''internalOnly''preferExternal'-->
	
	<icon src="icon/istapp.png" />
    <icon src="icon/res/mipmap-mdpi/istapp.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="icon/res/mipmap-hdpi/istapp.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="icon/res/mipmap-xhdpi/istapp.png"  gap:platform="android"    gap:qualifier="xhdpi" />
	
   	<plugin name="cordova-plugin-whitelist" spec="~1.3.1" />
</widget>
